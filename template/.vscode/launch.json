{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "development",
            "request": "launch",
            "cwd": "app",
            "type": "dart",
            "program": "lib/main/development.dart",
            "args": [
                "--target",
                "lib/main/development.dart",
                "--web-renderer",
                "html"
            ]
        },
        {
            "name": "development w/ devtools",
            "request": "launch",
            "cwd": "app",
            "type": "dart",
            "program": "lib/main/development_with_redux_devtools.dart",
            "args": [
                "--target",
                "lib/main/development_with_redux_devtools.dart",
                "--web-renderer",
                "html"
            ]
        },
        {
            "name": "development & send event",
            "request": "launch",
            "cwd": "app",
            "type": "dart",
            "program": "lib/main/development_and_send_events.dart",
            "args": [
                "--target",
                "lib/main/development_and_send_events.dart",
                "--web-renderer",
                "html"
            ]
        },
        {
            "name": "production",
            "request": "launch",
            "cwd": "app",
            "type": "dart",
            "program": "lib/main/production.dart",
            "args": [
                "--target",
                "lib/main/production.dart",
                "--web-renderer",
                "html",
                "--release"
            ]
        },
        {
            "name": "Screenshots",
            "request": "launch",
            "type": "dart",
            "codeLens": {
                "for": [
                    "run-test",
                    "run-test-file"
                ]
            },
            "args": [
                "--update-goldens",
                "--dart-define",
                "createScreenshots=true"
            ]
        }
    ]
}